{
  "name": "pl_extract_sql_server",
  "properties": {
    "activities": [
      {
        "name": "Extract SQL Server",
        "type": "Copy",
        "dependsOn": [],
        "policy": {
          "timeout": "0.12:00:00",
          "retry": 0,
          "retryIntervalInSeconds": 30
        },
        "typeProperties": {
          "source": {
            "type": "SqlServerSource",
            "sqlReaderQuery": {
              "value": "@pipeline().parameters.source_query",
              "type": "Expression"
            },
            "datasetSettings": {
              "type": "SqlServerTable",
              "name": "SourceDataset",
              "externalReferences": {
                "connection": {
                  "value": "@pipeline().parameters.source_connection_id",
                  "type": "Expression"
                }
              },
              "typeProperties": {
                "database": {
                  "value": "@pipeline().parameters.source_database",
                  "type": "Expression"
                }
              }
            }
          },
          "sink": {
            "type": "ParquetSink",
            "storeSettings": {
              "type": "LakehouseWriteSettings"
            },
            "formatSettings": {
              "type": "ParquetWriteSettings"
            },
            "datasetSettings": {
              "type": "LakehouseFiles",
              "name": "SinkDataset",
              "linkedService": {
                "name": "Lakehouse",
                "properties": {
                  "type": "Lakehouse",
                  "typeProperties": {
                    "workspaceId": {
                      "value": "@pipeline().libraryVariables.var_lib_fabric_deployment_workspace_id",
                      "type": "Expression"
                    },
                    "artifactId": {
                      "value": "@pipeline().libraryVariables.var_lib_ingestion_raw_lakehouse_id",
                      "type": "Expression"
                    }
                  }
                }
              },
              "typeProperties": {
                "location": {
                  "type": "LakehouseLocation",
                  "folderPath": {
                    "value": "@pipeline().parameters.output_path",
                    "type": "Expression"
                  }
                }
              }
            }
          },
          "enableStaging": false
        }
      }
    ],
    "parameters": {
      "source_query": {
        "type": "string"
      },
      "output_path": {
        "type": "string"
      },
      "source_connection_id": {
        "type": "string"
      },
      "source_database": {
        "type": "string"
      }
    }
  }
}
