{
  "name": "Spark Dev Container",
  "build": {
    "dockerfile": "spark.Dockerfile",
    "context": "."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter"
  ],
  "postCreateCommand": "pip install --no-cache-dir pyspark",
  "remoteUser": "vscode"
}
